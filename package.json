{
  "name": "quick_start_electron-react",
  "description": "Quick Start Electron + ReactJS",
  "author": "Igor Gaichuk (jsparrow2006)",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "cross-env": "5.1.6",
    "electron-is-dev": "0.3.0",
    "electron-log": "^2.2.6",
    "lodash": "^4.17.11",
    "node-sass": "^4.14.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-redux": "^7.2.1",
    "react-router-dom": "^5.2.0",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0",
    "update-electron-app": "^1.5.0"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "electron": "2.0.2",
    "electron-builder": "^20.15.1",
    "electron-devtools-installer": "^2.2.4",
    "prettier": "^2.1.1",
    "react-scripts": "^3.4.3",
    "wait-on": "^5.2.0"
  },
  "build": {
    "appId": "io.example.electron-cra",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "publish": {
      "provider": "github"
    },
    "electronDownload": {
      "cache": "./cache"
    }
  },
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "setupProject": "node setupProject.js",
    "develop": "concurrently \"cross-env BROWSER=none npm run react-start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-build": "electron-builder",
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test --env=jsdom",
    "react-eject": "react-scripts eject",
    "release": "npm run react-build && electron-builder --publish=always",
    "build": "npm run react-build && npm run electron-build"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
